@model IEnumerable<CFA.Models.TypeHardware>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model); // grid with sorting and paging
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" href="/Admin/TypeHardware/Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div id="imaginary_container">
                <form method="get">
                    <div class="input-group stylish-input-group">
                        @Html.TextBox("search", null, new
                   {
                       @class = "form-control",
                       placeholder = "Name",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                        <span class="input-group-addon">
                            <button type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive table-striped">

    @grid.GetHtml(tableStyle: "table",
        columns: grid.Columns(
        grid.Column("Id","#"),
        grid.Column("name", "Name"),
        grid.Column(header: "Action", format: @<text>
    <a class="btn btn-primary" href="/Admin/TypeHardware/Edit/@item.Id">Edit</a>
    <a class="btn btn-primary" href="/Admin/TypeHardware/Details/@item.Id">Details</a>
    <a class="btn btn-danger" href="/Admin/TypeHardware/Delete/@item.Id">Delete</a>
    </text>)), selectedRowStyle: "selectedRow")
</div>