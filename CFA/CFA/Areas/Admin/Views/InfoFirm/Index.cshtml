@model IEnumerable<CFA.Models.InfoFirm>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model); // grid with sorting and paging
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" href="/Admin/InfoFirm/Create">Create New</a>
</p>

<div class="panel panel-primary filterable">
    <div class="panel-heading panel-heading-custom">
        <h3 class="panel-title">Filters</h3>
        <div class="pull-right">
            <span class="glyphicon glyphicon-filter"></span>

        </div>
    </div>
    <div class="container">
        <div class="row filters">
            <form method="get">
                <div class="col-md-3">
                    @Html.TextBox("name", null, new
                   {
                       @class = "form-control",
                       placeholder = "Name",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
                <div class="col-md-2">
                    @Html.TextBox("email", null, new
                   {
                       @class = "form-control",
                       placeholder = "Email",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
                <div class="col-md-2">
                    @Html.TextBox("phone", null, new
                   {
                       @class = "form-control",
                       placeholder = "Phone",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive table-striped">
    @grid.GetHtml(tableStyle: "table",
        columns: grid.Columns(
        grid.Column("Id","#"),
        grid.Column("name", "Name"),
        grid.Column("email", "Email"),
        grid.Column("phone", "Phone"),
        grid.Column(header: "Action", format: @<text>
    <a class="btn btn-primary" href="/Admin/InfoFirm/Edit/@item.Id">Edit</a>
    <a class="btn btn-primary" href="/Admin/InfoFirm/Details/@item.Id">Details</a>
    <a class="btn btn-danger" href="/Admin/InfoFirm/Delete/@item.Id">Delete</a>
    </text>)), selectedRowStyle: "selectedRow")
</div>