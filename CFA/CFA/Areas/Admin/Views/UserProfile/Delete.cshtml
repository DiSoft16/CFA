@model CFA.Models.UserProfileView

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div class="panel panel-danger">
    <div class="panel-heading">
        <h3>Are you sure you want to delete this?</h3>
        <h4>UserProfile</h4>
    </div>

    <div class="list-group">
        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.UserName)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.UserName)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.phone)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.phone)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.email)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.email)</p>
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-sm-1">
            <input type="submit" class="btn btn-danger edit-button" value="Delete" />
        </div>
        <div class="col-sm-1">
            <a href="/UserProfile/Index" class="btn btn-primary edit-button">Back</a>
        </div>
    }
</div>
