@model CFA.Models.UserProfile

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserProfile</legend>

        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            <div class="col-sm-8">
                @Html.LabelFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">
                @Html.LabelFor(model => model.phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.phone, new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(model => model.phone)
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-8">
                @Html.LabelFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.email, new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8">
                <button type="submit" class="btn btn-primary edit-button">Save</button>
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
