@if (Request.IsAuthenticated)
{
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">@User.Identity.Name<b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Manage", "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>
        <li>

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a style="text-decoration: none; color: #000;" href="javascript:document.getElementById('logoutForm').submit()"><span>Quit</span></a>
            }
        </li>
    </ul>
}
else
{
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">Login<b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
