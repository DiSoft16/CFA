@model CFA.Models.InfoHardware

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>InfoHardware</h4>
    </div>

    <div class="list-group">
        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.typeId)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.TypeHardware.name)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.BrandId)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.BrandHardware.name)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.name)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.name)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.numbAvailable)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.numbAvailable)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.numbOrder)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.numbOrder)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.cost)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.cost)</p>
        </a>

        <a class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.describe)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.describe)</p>
        </a>
    </div>

    <div class="col-sm-1">
        <a href="/Admin/InfoHardware/Edit/@Model.Id" class="btn btn-primary edit-button">Edit</a>
    </div>

    <div class="col-sm-1">
        <a href="/Admin/InfoHardware/Index" class="btn btn-primary edit-button">Back</a>
    </div>
</div>
