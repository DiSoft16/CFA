@model IEnumerable<CFA.Models.OrdersFirm>

@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model); // grid with sorting and paging
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" href="/Admin/OrdersFirm/Create">Create New</a>
</p>

<div class="panel panel-primary filterable">
    <div class="panel-heading panel-heading-custom">
        <h3 class="panel-title">Filters</h3>
        <div class="pull-right">
            <span class="glyphicon glyphicon-filter"></span>

        </div>
    </div>
    <div class="container">
        <div class="row filters">
            <form method="get">
                <div class="col-md-3">
                    @Html.TextBox("numb", null, new
                   {
                       @class = "form-control",
                       placeholder = "Numb",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
                <div class="col-md-2">
                    @Html.TextBox("hardware", null, new
                   {
                       @class = "form-control",
                       placeholder = "Name Hardware",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
                <div class="col-md-2">
                    @Html.TextBox("firm", null, new
                   {
                       @class = "form-control",
                       placeholder = "Firm Name",
                       type = "text",
                       autocomplete = "off",
                       onChange = "$('form').submit()"
                   })
                </div>
                <div class="col-md-2">
                    <select class="form-control" name="execute" onchange="$('form').submit()">
                        <option value="0">Select Execute</option>
                        @foreach (var item in ViewBag.ExecuteList)
                        {
                            if (Convert.ToInt32(@Request.Params["execute"]) == @item.Id)
                            { <option value="@item.Id" selected >@item.message</option>}
                            else
                            {<option value="@item.Id">@item.message</option>}
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive table-striped">

    @grid.GetHtml(tableStyle: "table",
        columns: grid.Columns(
        grid.Column("Id", "#"),
        grid.Column("dateStart", "DateStart"),        
        grid.Column("dateExecution", "DateExecution"),
        grid.Column("InfoHardware.BrandHardware.name", "Brand Name"),        
        grid.Column("InfoHardware.name", "Hardware Name"),
        grid.Column("numb", "Numb"),
        grid.Column("InfoFirm.name", "Firm Name"),
        grid.Column("OrdersExecute.message", "Order State"),
        grid.Column(header: "Action", format: @<text>
    <a class="btn btn-primary" href="/Admin/OrdersFirm/Edit/@item.Id">Edit</a>
    <a class="btn btn-primary" href="/Admin/OrdersFirm/Details/@item.Id">Details</a>
    <a class="btn btn-danger" href="/Admin/OrdersFirm/Delete/@item.Id">Delete</a>
    </text>)), selectedRowStyle: "selectedRow")
</div>